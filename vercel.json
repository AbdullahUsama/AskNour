{
  "functions": {
    "app/api/chat/route.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "app/api/auth/*/route.js": {
      "maxDuration": 10,
      "memory": 512
    },
    "app/api/speech-to-text/route.js": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=3008",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "regions": ["iad1"],
  "github": {
    "silent": true
  }
}